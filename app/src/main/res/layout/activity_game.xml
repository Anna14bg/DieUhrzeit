<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    android:background="#4856ACF8">

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:text="x"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:fontFamily="@font/acme" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@android:color/holo_blue_dark" />
    
    <ImageView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/clock1" />

    <ImageView
        android:id="@+id/hint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hint" />

    <ImageView
        android:id="@+id/sound"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hint"
        android:src="@drawable/sound" />

    <View
        android:id="@+id/centralPoint"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/redArrow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/centralPoint"
        android:layout_centerHorizontal="true"
        android:src="@drawable/minute" />

    <ImageView
        android:id="@+id/blueArrow"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:rotation="90"
        android:translationX="55dp"
        android:translationY="55dp"
        android:layout_above="@id/centralPoint"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hour" />

    <ImageView
        android:id="@+id/bluedot"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:src="@drawable/center" />

    <ImageView
        android:id="@+id/assess"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/assess" />

    <ImageView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/congrats"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/hand"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/hand"
        android:visibility="invisible" />

</RelativeLayout>