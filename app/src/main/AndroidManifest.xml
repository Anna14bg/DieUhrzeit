<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tum.in.l4k.dieuhrzeitlernen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/clock_icon_foreground"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/clock_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.UnlockedLevels"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.LevelComplete"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.Game"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.Instructions"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.Welcome"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.tum.in.l4k.dieuhrzeitlernen.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>